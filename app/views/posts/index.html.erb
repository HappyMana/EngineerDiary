<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<% @posts.each do |post| %>
  <p>title : <%= link_to post.title, post_path(post.id) %></p>
  <p>URL : <%= Rinku.auto_link(post.url, :all, 'target="_blank"').html_safe %></p>
  <p>tag_id : <%= post.tag_id %></p>
  <p>日付 : <%= post.created_at %></p>
  <p>投稿者 : <%= post.user_id %></p>
  <hr>
<% end %>

<p><%= link_to "新規作成", new_post_path %></p>

<%= form_with url: search_posts_path, method: :get, local: :true do |form| %>
  <%= form.select :sort_id, [["更新新しい順", 1], ["いいね順", 2]], include_blank: "並べ順" %>
  <%= form.collection_select( :tag_id, Tag.all, :id, :tag_name, include_blank: "タグ") %>
  <%= form.submit :検索 %>
<% end %>
