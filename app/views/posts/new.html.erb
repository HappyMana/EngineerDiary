<div class="md:p-12 flex flex-row flex-wrap">
  <div class="md:w-1/2-screen m-0 p-5 bg-white w-full tw-h-full shadow md:rounded-lg">
    <%= form_with model: @post do |form| %>
    <div class="text-2xl">新規作成</div>

    <div class="flex-col flex py-3">
      <%= form.label :タイトル, class: "pb-2 text-gray-700 font-semibold" %>
      <%= form.text_area :title, class: "p-2 shadow rounded-lg bg-gray-100 outline-none focus:bg-gray-200" %>
    </div>

    <div class="flex-col flex py-3">
      <%=form.label :テキスト, class: "pb-2 text-gray-700 font-semibold" %>
      <%= form.text_area :text, class: "p-2 shadow rounded-lg bg-gray-100 outline-none focus:bg-gray-200" %>
    </div>

    <div class="flex-col flex py-3">
      <%= form.label :url, class: "pb-2 text-gray-700 font-semibold" %>
      <%= form.url_field :url, class: "p-2 shadow rounded-lg bg-gray-100 outline-none focus:bg-gray-200" %>
    </div>

      <%= form.collection_select( :tag_id,  Tag.all, :id, :tag_name, include_blank: "タグ") %>

    <div class="flex justify-center">
      <div class="form-check form-check-inline">
        <%= form.radio_button :is_public, :true %>
        <%= form.label :公開, class: "mr-3" %>
        <%= form.radio_button :is_public, :false %>
        <%= form.label :非公開 %>
      </div>
    </div>

    <div class="flex justify-center">
      <div class="form-check form-check-inline">
        <%= form.radio_button :is_read, :true %>
        <%= form.label :読んだ,  class: "mr-3" %>
        <%= form.radio_button :is_read, :false %>
        <%= form.label :まだ %>
      </div>
    </div>

    <div class="mt-2">
        <%= form.submit :投稿, class: "p-3 bg-indigo-400 text-white w-full hover:bg-indigo-300" %>
    </div>
    <% end %>
  </div>
</div>

<p><%= button_to "タグを新規作成する", {controller: 'tags', action: 'new'}, {method: :get} %></p>
<p><%= button_to "もどる", posts_path(@post.id), {method: :get} %></p>
